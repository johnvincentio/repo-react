{
  "extends": "airbnb",
  "env": {
    "browser": true
	},
	"globals": {
	},
	"rules": {
		"no-console": 0,
		"max-len": [2, 900, 4], // maximum length of 900 characters
		"indent": [2, "tab", {"SwitchCase": 1}],
		"no-tabs": 0,
		"react/jsx-indent": ["off", 2],
		"react/jsx-indent-props": ["off", 2],
		"jsx-a11y/anchor-is-valid": [ "error", {
			"components": [ "Link" ],
			"specialLink": [ "to" ]
		}]
	},
	"plugins": [
		"react",
		"jsx-a11y",
		"import"
  ]
}
